{{#unless complete}}
  <div class="modal-body">
    <div class="pure-form pure-form-aligned">
      <fieldset style="color:#777;">
        <div class="pure-control-group">
          <label for="create_account_name">{{t 'create.account.username'}}</label>
          {{input id="create_account_name" class="pure-input-1-2" type="text" autocorrect="off" autocapitalize="off" autofocus="autofocus" value=accountName placeholderTranslation="create.account.username"}}
          {{#if nameValidation.failed}}
            {{#if nameValidation.reason}}
              <div class="tip bad"><i class="fa fa-times"></i>{{nameValidation.reason}}</div>
            {{/if}}
          {{/if}}
          {{#if nameValidation.ok}}
            <div class="tip ok"><i class="fa fa-check"></i>{{nameValidation.reason}}</div>
          {{/if}}
        </div>
        <div class="pure-control-group">
          <label for="create_account_email">{{t 'create.account.email'}}</label>
          {{input id="create_account_email" class="pure-input-1-2" type="email" autocorrect="off" autocapitalize="off" value=accountEmail placeholderTranslation="create.account.email"}}
          {{#if emailValidation.failed}}
            {{#if emailValidation.reason}}
              <div class="tip bad"><i class="fa fa-times"></i>{{emailValidation.reason}}</div>
            {{/if}}
          {{/if}}
          {{#if emailValidation.ok}}
            <div class="tip ok"><i class="fa fa-check"></i>{{emailValidation.reason}}</div>
          {{/if}}
        </div>
        <div class="pure-control-group">
          <label for="create_account_password">{{t 'create.account.password'}}</label>
          {{input id="create_account_password" class="pure-input-1-2" type="password" autocorrect="off" autocapitalize="off" value=accountPassword placeholderTranslation="create.account.password"}}
          {{#if passwordValidation.failed}}
            {{#if passwordValidation.reason}}
              <div class="tip bad"><i class="fa fa-times"></i>{{passwordValidation.reason}}</div>
            {{/if}}
          {{/if}}
          {{#if passwordValidation.ok}}
          <div class="tip ok"><i class="fa fa-check"></i>{{passwordValidation.reason}}</div>
          {{/if}}
        </div>
      </fieldset>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="pure-button pure-button-primary" {{bind-attr disabled="submitDisabled"}} {{action 'createAccount'}}>{{createAccountText}}</button>
    {{#if formSubmitted}}
      &nbsp; <i class='fa fa-spinner fa-spin'></i>
    {{else}}
      &nbsp; <a {{action 'cancel'}}>{{t 'create.account.cancel'}}</a>
    {{/if}}
  </div>
{{/unless}}