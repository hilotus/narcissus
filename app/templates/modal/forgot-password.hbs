{{#unless complete}}
  <div class="modal-body">
    <div class="pure-form pure-form-stacked">
      <fieldset>
        <label for="forgot-email-input" style="color:#8c8c8c;">{{t 'forgot.tip'}}</label>
          {{input id="forgot-email-input" type="text" class="pure-input-1-2" autocorrect="off" autocapitalize="off" autofocus="autofocus" value=email placeholder=(t "forgot.email")}}
      </fieldset>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="pure-button pure-button-primary" {{bind-attr disabled="forgotDisabled"}} {{action 'forgotPassword'}}>{{forgotButtonText}}</button>
    {{#if showSpinner}}
      &nbsp; <i class='fa fa-spinner fa-spin'></i>
    {{else}}
      &nbsp; <a {{action 'cancel'}}>{{t 'forgot.cancel'}}</a>
    {{/if}}
  </div>
{{/unless}}