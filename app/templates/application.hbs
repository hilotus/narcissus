<div id="layout" class="row">
  <div class="sidebar col-xs-12 col-sm-3">
    <div class="header">
      <hgroup>
        <h1 class="brand-title">{{t 'blog.title'}}</h1>
        <h4 class="brand-tagline">{{t 'blog.description'}}</h4>
      </hgroup>

      <ul class="nav-list">
        <li class="nav-item">{{#link-to 'index'}}{{t 'blog.home'}}{{/link-to}}</li>
        <li class="nav-item">{{#link-to 'posts'}}{{t 'blog.posts'}}{{/link-to}}</li>
        {{#if currentUser}}
          <li class="nav-item">{{#link-to 'settings'}}{{t 'blog.admin'}}{{/link-to}}</li>
        {{/if}}
        <li class="nav-item">
          {{#if currentUser}}
            <a {{action 'logout'}}>{{t 'button.logout'}}</a>
          {{else}}
            <a {{action 'showLogin'}}>{{t 'button.login'}}</a>
          {{/if}}
        </li>
      </ul>
    </div>
  </div>

  <div class="content col-xs-12 col-sm-9">
    <div class="inner-content">{{outlet}}</div>
  </div>
</div>

{{outlet 'modal'}}

{{alert-modal content=alertContent}}

{{spin-modal isActive=isActive title=title}}
