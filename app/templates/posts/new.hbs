<div class="content-subhead">
  <div class="row">
    <div class="col-xs-12">{{headerTitle}}</div>
  </div>
</div>
<div class="content-contents row">
  {{input type="text" class="form-group col-xs-12" placeholder=(t "posts.title") value=model.title}}
  {{#if bufferedTags}}
    <div class="form-group">
      {{select-picker width="100%" content=bufferedTags selection=model.tags prompt=(t "blog.tag") isMultiple=true}}
    </div>
  {{/if}}
  {{#if bufferedCategories}}
    <div class="form-group">
      {{select-picker width="100%" content=bufferedCategories selection=model.category prompt=(t "blog.category")}}
    </div>
  {{/if}}
  <div class="form-group">
    {{markdown-editor body=model.body}}
  </div>
  <div class="form-group">
    {{cw-button label=createTitle rightIcon=spinnerIcon action="createPost" color="blue" isDisabled=createDisabled}}
    {{cw-button label=(t 'button.cancel') action="cancel"}}
  </div>
</div>
