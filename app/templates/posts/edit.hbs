{{#if model}}
  <div class="content-subhead">
    <div class="pure-u-1">{{headerTitle}}</div>
  </div>
  <div class="pure-form pure-form-stacked">
    <fieldset>
      {{input type="text" class="pure-input-1" placeholderTranslation="posts.create.input.title" value=title}}
      {{select-picker content=bufferedTags selection=tags promptTranslation="blog.tag" isMultiple=true}}
      {{select-picker content=bufferedCategories selection=category promptTranslation="blog.category"}}
    </fieldset>
    <fieldset>
      {{epic-editor localStorageName=id body=body}}
    </fieldset>
    <fieldset>
      <div class="pure-g">
        <div class="pure-u-1">
          <button {{action 'editPost'}} class="pure-button pure-button-primary" {{bind-attr disabled="editting"}}>{{editTitle}}</button>
          {{#if showSpinner}}
            &nbsp; <i class='fa fa-spinner fa-spin'></i>
          {{else}}
            <button {{action 'cancel'}} class="pure-button">{{t 'button.cancel'}}</button>
          {{/if}}
        </div>
      <div>
    </fieldset>
  </div>
{{/if}}