{{#if model}}
  <div class="content-subhead">
    <div class="pure-u-1">{{headerTitle}}</div>
  </div>
  <div class="pure-form pure-form-stacked">
    <fieldset>
      {{input type="text" class="pure-input-1" placeholder=(t "posts.title") value=model.title}}
      {{select-picker content=bufferedTags selection=model.tags prompt=(t "blog.tag") isMultiple=true}}
      {{select-picker content=bufferedCategories selection=model.category prompt=(t "blog.category")}}
    </fieldset>
    <fieldset>
      <div class="pure-g">
        <div class="pure-u-1">
          {{markdown-editor body=model.body}}
        </div>
      </div>
    </fieldset>
    <fieldset>
      <div class="pure-g">
        <div class="pure-u-1">
          <button {{action 'editPost'}} class="pure-button pure-button-primary" {{bind-attr disabled=editDisabled}}>{{editTitle}}</button>
          {{#if showSpinner}}
            &nbsp; <i class='fa fa-spinner fa-spin'></i>
          {{else}}
            <button {{action 'cancel'}} class="pure-button">{{t 'button.cancel'}}</button>
          {{/if}}
        </div>
      </div>
    </fieldset>
  </div>
{{/if}}