<div class="content-subhead">
  <div class="pure-g">
    <div class="pure-u-1-3">{{view 'posts/search' keywords=""}}</div>
    <div class="pure-u-2-3 horizontal-right">
      {{#if currentUser}}
        {{#link-to "posts.new" class="pure-button pure-button-primary"}}{{t 'posts.create'}}{{/link-to}}
      {{/if}}
    </div>
  </div>
</div>
<div class="content-contents">
{{#if isLoading}}
  <div class="post-loading"></div>
{{else}}
  {{view 'posts/post-list' content=filteredPosts}}
{{/if}}
</div>